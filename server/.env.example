# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/ml-insights-hub

# JWT Authentication
# CRITICAL: Generate a cryptographically secure secret for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Minimum 256 bits (64 hex characters) required for security
JWT_SECRET=GENERATE_SECURE_SECRET_FOR_PRODUCTION_USE_CRYPTO_RANDOM_BYTES_64_HEX
JWT_EXPIRE=7d

# Python Environment
PYTHON_PATH=../venv/bin/python

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# ML Model Storage
MODEL_STORAGE_PATH=../models

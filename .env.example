# ML Insights Hub - Environment Variables Template
# Copy this file to .env and fill in your values

# ===================
# Server Configuration
# ===================
NODE_ENV=development
PORT=5000

# ===================
# Database (MongoDB)
# ===================
# For local development (non-Docker):
# MONGODB_URI=mongodb://localhost:27017/ml_insights

# For Docker (use these):
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=changeme_secure_password
MONGO_DB=ml_insights

# ===================
# Authentication
# ===================
# Generate a secure JWT secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_very_secure_jwt_secret_here_minimum_64_characters_recommended
JWT_EXPIRE=7d

# ===================
# Frontend
# ===================
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:5000

# ===================
# Redis (Optional)
# ===================
# REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=changeme_redis_password

# ===================
# Python Environment
# ===================
PYTHON_PATH=../venv/bin/python

# ===================
# File Uploads
# ===================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# ===================
# Logging (Optional)
# ===================
# Set to 'true' to enable file logging in development
ENABLE_FILE_LOGGING=false

# ===================
# Development Tools (Optional)
# ===================
# Skip authentication in development (SECURITY: Never use in production!)
# SKIP_AUTH=false

# Mongo Express (Docker dev only)
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=pass
